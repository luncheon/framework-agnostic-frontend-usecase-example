{
  "compilerOptions": {
    "noEmit": true,
    "target": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "newLine": "LF",
    "baseUrl": "."
  },
  "include": [
    "case-study/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "case-study/**/*.spec.ts"
  ]
}
